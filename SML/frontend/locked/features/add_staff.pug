extends ../../template/user_features

block content 
    h1 #{title}
    form.main-form.first(method='POST', action='/app/add/staff')
        .main-form__title
            h1 Add New Staff
        .main-form__body
            input.main-form__input(type='text', name='name', placeholder='Name', required='')
            input.main-form__input(type='text', name='phone', placeholder='Phone', required='')
            input.main-form__input(type='email', name='email', placeholder='Email Address', required='')
            label Position 
                select(name= 'position')
                        option(value= "owner") Owner
                        option(value= "sales") Sales
                        option(value= "production") Production
            input.main-form__input(type='password', name='password', placeholder='Password', required='')
            input.main-form__input(type='password', name='cpassword', placeholder='Confirm Password', required='')            
            input.btn(type='submit')

